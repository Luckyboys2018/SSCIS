@model IEnumerable<SSCIS.Models.TutorApplication>

@{
    ViewBag.Title = SSCISResources.Resource.TUTOR_APPLICATIONS;
    ViewBag.ActiveMenuItem = "menu-tutors";
}

<div class="body-content container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
        </div>

        <div class="col-sm-8 text-left">
            <h1>@SSCISResources.Resource.TUTOR_APPLICATIONS</h1>

            <p>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ApplicationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Applicant.Login)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApplicationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Applicant.Login)
                        </td>
                        <td>
                            @Html.ActionLink(SSCISResources.Resource.DETAIL, "Details", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="col-sm-2 sidenav">
        </div>
    </div>
</div>