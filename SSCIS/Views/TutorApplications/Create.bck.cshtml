@model SSCIS.Models.Meta.MetaTutorApplication

@{
    ViewBag.Title = SSCISResources.Resource.TUTOR_APPLICATION;
}

<h2>@SSCISResources.Resource.TUTOR_APPLICATION</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <!--<h4>TutorApplication</h4>-->
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Application.Applicant.Login, SSCISResources.Resource.LOGIN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Application.Applicant.Login)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Application.Applicant.Firstname, SSCISResources.Resource.NAME, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Application.Applicant.Firstname)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Application.Applicant.Lastname, SSCISResources.Resource.LASTNAME, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Application.Applicant.Lastname)
            </div>
        </div>
        <h4>@SSCISResources.Resource.SUBJECTS</h4>
        @foreach (var subject in Model.ApplicationSubjects)
        {
            <div class="form-group">
                @Html.LabelFor(model => subject.SubjectID, SSCISResources.Resource.SUBJECT, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => subject.SubjectID, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => subject.Degree, SSCISResources.Resource.DEGREE, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.DropDownList("Degree", null, htmlAttributes: new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => subject.Degree, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }

        @Html.ActionLink(SSCISResources.Resource.ADD_SUBJECT, "Create", new { count = ViewBag.NextCount})

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div hidden>
    @Html.ActionLink("Back to List", "Index")
</div>
