@model SSCIS.Models.SSCISContent

@{
    ViewBag.Title = SSCISResources.Resource.CREATE_NEWS;
}
<div class="body-content container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
        </div>

        <div class="col-sm-8 text-left">
            <h2>@SSCISResources.Resource.CREATE_NEWS</h2>

            @using (Html.BeginForm("Create", "Contents"))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Header, SSCISResources.Resource.HEADER, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-10 col-md-offset-1">
                            @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Header, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TextContent, SSCISResources.Resource.CONTENT, htmlAttributes: new { @class = "control-label col-md-1" })
                        <div class="col-md-10 col-md-offset-1">
                            @Html.EditorFor(model => model.TextContent, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TextContent, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="@SSCISResources.Resource.CREATE" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
            </div>
        @if (Session["role"] != null && Session["role"].Equals(SSCIS.Class.AuthorizationRoles.Administrator))
        {
            <div class="col-sm-2 sidenav">
            </div>
        }
        else
        {
            <div class="col-sm-2 sidenav">
                <div class="well">
                    <p>
                        @SSCISResources.Resource.TIMETABLE_AFTER_LOGIN
                    </p>
                </div>
            </div>
        }
        </div>
    </div>
